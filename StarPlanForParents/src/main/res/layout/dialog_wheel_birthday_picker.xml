<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/radiu_bg"
        android:layout_centerInParent="true"
        android:id="@+id/ll_content">
        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_input"
            android:layout_marginRight="168px"
            android:layout_marginLeft="168px"
            android:layout_marginBottom="@dimen/padding_input"
            android:text="@android:string/ok"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_login_circle_selector"
            style="@style/btn_common_nomargin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.fancyfamily.primarylibrary.commentlibrary.lib.wheelview.WheelView
                android:id="@+id/wv_year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <com.fancyfamily.primarylibrary.commentlibrary.lib.wheelview.WheelView
                android:id="@+id/wv_month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />
            <com.fancyfamily.primarylibrary.commentlibrary.lib.wheelview.WheelView
                android:id="@+id/wv_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>