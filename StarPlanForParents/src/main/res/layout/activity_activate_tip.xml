<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_active_bg"
    android:paddingLeft="60px"
    tools:context="com.shinread.StarPlan.Parent.ui.activity.ActivateTipActivity">


    <ImageView
        android:id="@+id/iv_2step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_active_2step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216px"
        android:scaleType="center"
        />
    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_active_card_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64px"
        android:scaleType="center"
        android:layout_below="@id/iv_2step"
        />
    <ImageView
        android:id="@+id/iv_step_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_active_step_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42px"
        android:scaleType="center"
        android:layout_below="@id/iv_card"
        />

    <Button
        android:id="@+id/btn_activate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/iv_step_list"
        android:layout_marginTop="76px"
        android:layout_marginRight="86px"
        android:layout_marginLeft="26px"
        android:layout_centerHorizontal="true"
        android:text="@string/activate_card"
        android:textColor="@color/btn_yellow_bg"
        android:background="@drawable/btn_commit_circle_selector"
        style="@style/btn_common_nomargin"
        />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/login_bg"
        android:background="@drawable/btn_register_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        style="@style/btn_common"
        />
</RelativeLayout>
