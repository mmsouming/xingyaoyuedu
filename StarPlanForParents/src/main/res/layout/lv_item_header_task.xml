    <TextView
        android:id="@+id/tv_start_time_title"
        android:layout_below="@id/tv_need1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="@string/task_start_time_title"
        android:layout_marginTop="@dimen/padding_input"
        android:textSize="32px"
        />

    <TextView
        android:id="@+id/tv_start_time_value"
        android:layout_below="@id/tv_need1"
        android:layout_toRightOf="@id/tv_start_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="16年3月22日  12:00"
        android:layout_marginLeft="@dimen/padding_input"
        android:layout_marginTop="@dimen/padding_input"
        android:textSize="32px"
        />

    <TextView
        android:id="@+id/tv_end_time_title"
        android:layout_below="@id/tv_start_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="@string/task_end_time_title"
        android:layout_marginTop="16px"
        android:textSize="32px"
        />

    <TextView
        android:id="@+id/tv_end_time_value"
        android:layout_below="@id/tv_start_time_title"
        android:layout_toRightOf="@id/tv_end_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="16年3月26日  12:00"
        android:layout_marginLeft="@dimen/padding_input"
        android:layout_marginTop="16px"
        android:textSize="32px"  />

    <TextView
        android:id="@+id/tv_library_range_title"
        android:layout_below="@id/tv_end_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="@string/task_library_title"
        android:layout_marginTop="@dimen/padding_input"
        android:textSize="32px"
        />

    <TextView
        android:id="@+id/tv_library_more"
        android:layout_below="@id/tv_end_time_title"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_bg"
        android:text="@string/task_library_more"
        android:layout_marginTop="@dimen/padding_input"
        android:textSize="32px"
        />
