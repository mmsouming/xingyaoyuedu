<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_detail_bg">

    <com.fancyfamily.primarylibrary.commentlibrary.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:padding="26px"
        app:title_left_icon_src="@drawable/cc_white_return"
        app:title_right_text=""
        app:title_right_visible="true"
        app:title_text="第三周阅读作业"
        app:title_text_color="@color/gray_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb">

        <ListView
            android:id="@+id/lv_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15px"

            android:layout_marginRight="15px"
            android:layout_marginTop="15px"
            android:background="@drawable/radiu_top_bg"
            android:divider="@drawable/line_heng"
            android:dividerHeight="1px"

            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btn_commit"
            style="@style/btn_common_nomargin"
            android:layout_width="402px"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28px"
            android:background="@drawable/btn_commit_circle_selector"
            android:text="@string/commit_task"
            android:textColor="@android:color/white"
            android:textSize="36px" />
    </RelativeLayout>
</RelativeLayout>