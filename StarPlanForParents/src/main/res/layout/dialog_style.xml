<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/radiu_bg"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_title"
            android:background="@drawable/dialog_title"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_dialog_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/tv_title"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/iv_dialog_icon"
                android:paddingLeft="8dp"
                android:paddingTop="18dp"
                android:paddingRight="18dp"
                android:paddingBottom="18dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="对话框标题"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/rl_title"
        android:id="@+id/rl_edit_pwd"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示对话框内容"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp" />

    </RelativeLayout>
    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_marginTop="8dip"
        android:layout_below="@id/rl_edit_pwd"
        android:id="@+id/line"/>
     <TableLayout
         android:layout_width="match_parent"
         android:layout_height="52dp"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/line"
         >
         <TableRow
             android:layout_width="match_parent"
             android:layout_height="52dp"
             >
             <Button
                 android:id="@+id/btn_cancel"
                 android:layout_width="0dp"
                 android:layout_height="52dp"
                 android:paddingBottom="10dip"
                 android:paddingLeft="18dip"
                 android:paddingRight="18dip"
                 android:paddingTop="10dip"
                 android:text="取消"
                 android:background="@drawable/dialog_btn_left_selector"
                 android:textColor="@color/gray_text"
                 android:layout_weight="1"/>
             <View
                 android:layout_width="2dip"
                 android:layout_height="match_parent"
                 android:background="@drawable/line_shu"
                 />
             <Button
                 android:id="@+id/btn_ok"
                 android:layout_width="0dp"
                 android:layout_height="52dp"
                 android:paddingBottom="10dip"
                 android:paddingLeft="18dip"
                 android:paddingRight="18dip"
                 android:paddingTop="10dip"
                 android:text="确定"
                 android:textColor="@color/gray_text"
                 android:background="@drawable/dialog_btn_right_selector"
                 android:layout_weight="1" />
          </TableRow>
      </TableLayout>
    </RelativeLayout>

</RelativeLayout>