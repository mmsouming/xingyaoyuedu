<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/task_detail_bg"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.fancyfamily.primarylibrary.commentlibrary.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:padding="26px"
        app:title_text_color="@color/gray_text"
        app:title_left_icon_src="@drawable/img_register_back"
        app:title_text="第三周阅读作业"
        app:title_right_text=""
        app:title_right_visible="true"
        />
    <ListView
        android:id="@+id/lv_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radiu_top_bg"
        android:layout_below="@id/tb"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:paddingLeft="30px"
        android:paddingRight="30px"

        android:scrollbars="none"
        android:dividerHeight="1px"
        android:headerDividersEnabled="false"
        android:listSelector="@color/transparent"
        android:divider="@drawable/line_heng"
        />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160px"
        android:layout_marginRight="160px"
        android:layout_marginBottom="28px"
        android:text="@string/commit_task"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_commit_circle_selector"
        style="@style/btn_common_nomargin"
        />
</RelativeLayout>