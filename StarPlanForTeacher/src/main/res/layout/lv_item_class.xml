<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/radiu_white_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:background="@drawable/radiu_white_bg"
        android:layout_height="140px"
        android:layout_gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_class_name"



                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:text="三年级3班"
                android:textColor="@color/bule_1"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_class_people"
                android:layout_width="wrap_content"
               android:gravity="center_vertical"
                android:padding="0px"
                android:layout_toRightOf="@+id/tv_class_name"
                android:layout_height="wrap_content"
               android:layout_marginLeft="36px"


                android:text="35人"
                android:textColor="@color/bule_2"
                android:textSize="30px" />

            <TextView

                android:id="@+id/tv_identification"
                android:layout_width="wrap_content"

                android:layout_toLeftOf="@+id/tv_identification_nub"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:layout_marginLeft="160px"
                android:text="已认证"
                android:textColor="@color/gray_2"
                android:textSize="28px" />

            <TextView

                android:id="@+id/tv_identification_nub"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:text="14人"
                android:textColor="@color/tv_renzheng_number"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>