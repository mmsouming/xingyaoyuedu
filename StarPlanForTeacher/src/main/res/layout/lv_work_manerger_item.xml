<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radiu_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radiu_white_bg"
        android:orientation="vertical"
        android:paddingLeft="34px"
        >
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="太空主题阅读作业"
            android:textColor="@color/bule_2"
            android:textSize="40px"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/img_class"
                android:drawablePadding="10px"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_submit"
                android:text="一年级 1 班"
                android:layout_marginTop="25px"
                android:textColor="@color/gray_2"
                android:textSize="30px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37px"
                  android:layout_marginBottom="10px"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_task_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerVertical="true"
            android:drawableLeft="@drawable/img_time"
            android:drawablePadding="10px"
            android:text="3月20日 12：00发布"
            android:textColor="@color/gray_2"
            android:textSize="24px" />


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="200px"
                android:layout_height="55px"
                android:layout_alignParentRight="true"
                android:text="取消"
                android:textSize="28px"
                android:textColor="@color/white"
                android:background="@drawable/btn_cancel_selector"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_finish"
                android:layout_width="200px"
                android:layout_height="55px"
                android:layout_alignParentRight="true"
                android:text="延迟完成"
                android:textSize="28px"
                android:textColor="@color/white"
                android:background="@drawable/btn_finish_blue_selector"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                android:visibility="gone"

                />
            <TextView
                android:id="@+id/tv_zhuaitai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已取消"
                android:textColor="@color/red"
                android:textSize="32px"
                android:layout_centerVertical="true"
                android:layout_marginRight="47px"
              android:layout_alignParentRight="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>