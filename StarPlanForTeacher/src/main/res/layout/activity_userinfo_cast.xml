<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/login_bg"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.fancyfamily.primarylibrary.commentlibrary.widget.TitleBar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:padding="26px"
            app:title_text_color="@color/gray_text"
            app:title_left_icon_src="@drawable/img_register_back"
            app:title_text="@string/cast_manager"
            app:title_right_text=""
            app:title_right_visible="true"
            />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="58px"
            android:layout_marginRight="12px"
            android:text="@string/send_cast"
            android:textSize="26px"
            android:layout_gravity="right|center_vertical"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_commit_circle_yellow_press"
            />
    </FrameLayout>

    <ListView
        android:id="@+id/lv_cast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radiu_white_bg"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="18px"
        android:layout_marginBottom="40px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:scrollbars="none"
        android:dividerHeight="1px"
        android:headerDividersEnabled="false"
        android:listSelector="@color/white"
        android:divider="@drawable/line_heng"
        />
</LinearLayout>