<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userinfo_main"
    android:fitsSystemWindows="true"
    tools:context="com.shinread.StarPlan.Teacher.ui.activity.work.SousuoActivity">


    <RelativeLayout
        android:id="@+id/sousuo_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:scaleType="center"

            android:src="@drawable/btn_back_yellow" />

        <EditText
            android:id="@+id/txt_title"
            android:layout_width="576px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:background="@drawable/btn_userinfo_circle"
            android:hint="请输入关键字"
            android:paddingLeft="24px"
            android:layout_marginLeft="42px"
            android:textColor="@color/tab_font_color_defalut"
            android:textSize="30px"

            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sousuo_bar_layout"
        android:layout_margin="20px"
        android:background="@drawable/radiu_white_bg">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"

                 android:id="@+id/sousuo_listview"
            >

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_sure"
            style="@style/btn_common_nomargin"
            android:layout_width="358px"
            android:layout_height="78px"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20px"
            android:layout_weight="0.43"
            android:background="@drawable/btn_yuedu_true_circle"
            android:padding="0px"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="36px" />
    </RelativeLayout>
</RelativeLayout>
