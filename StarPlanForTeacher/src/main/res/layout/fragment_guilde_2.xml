<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/img_active_bg"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_guid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_guide_2_title"
        android:layout_marginTop="92px"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_guide_2_input_kindinfo"
        android:layout_marginTop="30px"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_guid_title"
        />

</RelativeLayout>