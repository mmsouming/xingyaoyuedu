<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_content">

    <com.fancyfamily.primarylibrary.commentlibrary.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:padding="26px"
        app:title_left_icon_src="@drawable/img_register_back"
        app:title_text="注册"
        app:title_right_text=""
        app:title_right_visible="true"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_below="@id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="@string/phone_hint"
        android:layout_marginTop="124px"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        style="@style/et_txt_title"
        />

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_below="@id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33px"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        >
        <EditText
            android:id="@+id/et_code"
            android:layout_below="@id/et_phone"
            android:inputType="number"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:hint="@string/code_hint"
            style="@style/et_txt_title"
            />
        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            android:background="@drawable/btn_register_code_circle_selector"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="10px"
            android:textSize="28px"
            android:textColor="@color/btn_login_txt"
            android:text="@string/get_code"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_below="@id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="33px"
        android:hint="@string/pwd_hint"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        style="@style/et_txt_title"
        />

    <TextView
        android:id="@+id/tv_pwd_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pwd"
        android:text="@string/input_pwd_tip_show"
        android:textColor="@android:color/white"
        android:layout_marginTop="14px"
        android:layout_marginBottom="135px"
        android:paddingLeft="30px"
        android:layout_marginLeft="106px"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pwd_tip"
        android:text="@string/register"
        android:textSize="36px"
        android:textColor="@color/btn_login_txt"
        android:background="@drawable/btn_login_circle_selector"
        android:layout_marginTop="33px"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        />

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:text="@string/user_protocol"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/et_margin_top"
        android:layout_marginBottom="60px"
        android:paddingLeft="30px"
        android:layout_marginLeft="69px"
        />
</RelativeLayout>
