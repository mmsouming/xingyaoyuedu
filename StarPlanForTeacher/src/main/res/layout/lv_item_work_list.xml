<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:background="@drawable/radiu_white_bg"
        android:paddingBottom="32px"
        android:paddingTop="32px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="22px"
                android:layout_marginTop="32px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="78px"
                    android:layout_height="78px"
                    android:src="@drawable/defaul_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_classmate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周丽丽"
                        android:textColor="@color/gray_3"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/txt_classmate_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星耀小学 三年3班"
                        android:textColor="@color/gray_1"
                        android:textSize="24px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_classmate_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="16年2月5日  18：30"
                    android:textColor="@color/gray_1"
                    android:textSize="24px" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="他一摇一摆走的漂亮"
                android:textColor="@color/gray_3"
                android:textSize="24px" />

            <TextView
                android:id="@+id/txt_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="24px"
                android:paddingTop="16px"
                android:text="全文"
                android:textColor="@color/bule"
                android:textSize="30px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270px">

                <ImageView
                    android:id="@+id/img_pics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@color/gray_1" />

                <TextView
                    android:id="@+id/txt_pic_no"
                    android:layout_width="56px"
                    android:layout_height="40px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12px"
                    android:background="@drawable/shape_btn_grey2"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34px"
                android:layout_marginTop="22px"
                android:text="春天故事"
                android:textColor="@color/gray_1" />

            <Button
                android:id="@+id/btn_dianping"
                android:layout_width="190px"
                android:layout_height="58px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30px"
                android:background="@drawable/shape_btn_red"
                android:text="点 评"
                android:textColor="@color/white"
                android:textSize="26px" />

            <LinearLayout
                android:id="@+id/layout_dianping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老师点评"
                    android:textColor="@color/bule_1"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/txt_dianping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:text="老师点评"
                    android:textColor="@color/gray_3"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22px"
            android:layout_marginTop="10px"
            android:src="@drawable/cc_mark_a" />


    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>