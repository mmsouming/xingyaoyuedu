<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radiu_white_bg"
        android:orientation="vertical"
        android:paddingTop="32px"
        android:paddingBottom="32px"
        android:layout_marginBottom="24px"
        android:paddingLeft="30px"
        android:paddingRight="30px">


        <TextView
            android:id="@+id/tv_task_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/img_time"
            android:drawablePadding="10px"
            android:text="3月20日 12：00发布"
            android:textColor="@color/gray_2"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="太空主题阅读作业"
            android:textColor="@color/bule_2"
            android:textSize="40px"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/img_class"
                android:drawablePadding="10px"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_submit"
                android:text="一年级 1 班"
                android:textColor="@color/gray_2"
                android:textSize="30px" />

            <TextView

                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="42px"
                android:layout_toLeftOf="@+id/tv_comment_wk"
                android:text="已提交 12/28"
                android:textColor="@color/gray_2"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_comment_wk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="点评 12"
                android:textColor="@color/gray_2"
                android:textSize="30px" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>