<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.fancyfamily.primarylibrary.commentlibrary.widget.MeasureListView
        android:id="@+id/book_list_comments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/font_color_white"
        android:dividerHeight="8dp"
        android:focusable="false"
        android:listSelector="@color/font_color_white"/>

    <TextView
        android:id="@+id/book_info_comentall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="查看所有评论"
        android:textColor="@color/login_bg"
        android:layout_marginTop="42px"
        android:textSize="28px" />

</LinearLayout>