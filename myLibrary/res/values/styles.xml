<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_title_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rg_btn_style">
        <item name="android:textSize">@dimen/tab_font_size</item>
        <item name="android:textColor">@drawable/rb_btn_txt_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="kind_txt_title">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="et_txt_title">
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textSize">30px</item>
        <item name="android:background">@drawable/btn_login_area_circle</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="et_txt_work_title">
        <item name="android:padding">@dimen/et_work_padding</item>
        <item name="android:textColor">@color/gray_school</item>
        <item name="android:textSize">30px</item>
        <item name="android:background">@drawable/btn_login_area_circle</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="et_txt_work_sousuo_title">
        <item name="android:padding">@dimen/et_work_padding</item>
        <item name="android:textColor">@color/tab_font_color_defalut</item>
        <item name="android:textSize">30px</item>
        <item name="android:background">@drawable/btn_unselected</item>
       <item name="android:radius">10dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="btn_common">
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:layout_margin">@dimen/padding_input</item> <!-- 对于5.0点击出现阴影效果 -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_common_nomargin">
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:textSize">30px</item>
    </style>
    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_of_week_label_condensed" />

    <style name="recomand_interst">
        <item name="android:paddingTop">12px</item>
        <item name="android:paddingBottom">12px</item>
        <item name="android:paddingLeft">@dimen/padding_input</item>
        <item name="android:paddingRight">@dimen/padding_input</item>
    </style>

    <style name="articlelist_item_ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/articlelist_item_rating_drawable_selector</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="dlg_request_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent </item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent </item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="editTextStyle">
        <item name="android:editable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/shape_editbg</item>
        <!-- 开启读入调用，没有这句设定的话不能输入文字 -->
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#C7C7C7</item>
        <item name="android:textColor">@color/font_color_dark</item>
    </style>
</resources>
